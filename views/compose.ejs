<%- include('partials/header') %>
<h1 class="mb-4">Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" name="postTitle" class="form-control" id="postTitle">
  </div>
  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" id="postBody" rows="4"></textarea>
  </div>
  <button type="submit" class="btn btn-outline-success">Publish</button>
</form>

<%- include('partials/footer') %>